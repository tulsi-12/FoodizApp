<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#DCD7D0">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35sp"
        android:src="@drawable/food_app"
        android:id="@+id/iv_loginlogo"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_loginlogo"
        android:backgroundTint="@color/light_grey"
        android:layout_margin="27dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvlogintitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="19dp"
                android:fontFamily="@font/almendra"
                android:text="Login Here"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_loginusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:fontFamily="@font/almendra"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="#6C6262"
                android:textSize="20sp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/et_loginpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:fontFamily="@font/almendra"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#6C6262"
                android:textSize="20sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLoginForgetPassword"
                android:text="Forget Password ?"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/almendra"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginRight="19dp"/>


            <CheckBox
                android:id="@+id/cb_loginshowhide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:fontFamily="@font/almendra"
                android:text="Show Password"
                android:textSize="15dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/almendra"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvloginnewuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/almendra"
                android:text="New User Click Here"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbtnLoginSigninwithgoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In with Google"
                android:textColor="@color/black"
                android:background="@drawable/common_google_signin_btn_text_light_normal"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>